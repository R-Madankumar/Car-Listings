<% layout('layouts/boilerplate') %>
<script>
    let mapToken = "<%=process.env.MAP_TOKEN %>";
    const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
</script>

<div class="row my-2 ">
    <div class="card-container col-lg-6 col-md-12 offset-lg-3">
        <div class="card listing-card p-3 shadow-sm">
            <h3 class="mb-3"><%= listing.title %></h3>
            <img src="<%= listing.image.url %>" class="card-img-top show-image mb-3" alt="listing image">

            <div class="card-body ">
                <p class="card-text mb-2"><b>Owned by:</b>  <%= listing.owner ? listing.owner.username : "Unknown Owner" %></p>
                <p class="card-text mb-2"><b>Description:</b> <%= listing.description %></p>
                <p class="card-text mb-2"><b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-In") %></p>
                <p class="card-text mb-2"><b>Location:</b> <%= listing.location %></p>
                <p class="card-text mb-3"><b>Country:</b> <%= listing.country %></p>

                <% if(currUser && currUser._id.equals(listing.owner._id)){%>
                <div class="d-flex flex-column flex-sm-row gap-2 mb-3">
                    <a href="/listings/<%=listing._id %>/edit" class="btn btn-outline-dark">Edit</a>
                    <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
                <%}%>
            </div>

            <%if(currUser){%>
            <div class="col-12 p-3">          
                <h4>Leave a review</h4>
                <form action="/listings/<%=listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div>
                        <label for="rating" class="form-label"></label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                   

                    <div>
                        <label for="comment" class="form-label">comment</label>
                        <textarea name="review[comment]" id="comment" cols="90" rows="5" class="form-control" required></textarea>
                        <div class="invalid-feedback">please add some comments for reviews</div>
                    </div>
                    
                    <br>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
            <%}%>


           <div class="reviews my-4">
             <h4 class="ms-1 mb-3">All Reviews</h4>
                <!-- Bootstrap row to control columns -->
                <div class="row g-3">
                    <% for(review of listing.reviews){ %>
                        <!-- 1 column on medium & below, 2 columns on large & above -->
                        <div class="col-12 col-lg-6">
                            <div class="card p-2 shadow-sm h-100">
                                <div class="card-body px-2 px-md-3 d-flex flex-column">
                                    <p class="card-text mb-1"><b>@<%= review.author ? review.author.username : "Unknown" %></b></p>
                                    <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text flex-grow-1"><%= review.comment %></p>

                                    <% if(currUser && currUser._id.equals(review.author._id)){%>
                                    <form method="POST" action="/listings/<%=listing._id %>/reviews/<%=review._id%>?_method=DELETE" class="mt-2">
                                        <button class="btn btn-sm btn-dark w-100">Delete</button>
                                    </form>
                                    <%}%>
                                </div>
                            </div>
                        </div>
                    <%}%>
                </div>
            </div>

            <div id="my-map" style="height: 500px;"></div>
        </div>
    </div>
</div>

<script src="/js/map.js"></script>